<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension PUBLIC "-//Joomla! 3.0//DTD template 1.0//EN" "http://help.aunited.ru/dtd/joomla/3.0/plugin-install.dtd">
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_COPYPROTECT</name>
    <author>Vitaliy Zhukov</author>
    <creationDate>December 2016</creationDate>
    <authorEmail>info@aunited.ru</authorEmail>
    <authorUrl>http://aunited.ru</authorUrl>
    <version>2.0.1</version>
    <copyright>Copyright (c) 2016 AUnuted Co. Ltd. All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <description><![CDATA[PLG_COPYPROTECT_XML_DESCRIPTION]]></description>
    <files>
        <folder>language</folder>
        <filename plugin="copyprotect">copyprotect.php</filename>
        <filename>index.html</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_copyprotect.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_copyprotect.sys.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.plg_system_copyprotect.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.plg_system_copyprotect.sys.ini</language>
    </languages>
    <config>
        <fields name="params" >
            <fieldset name="Basic">
                <field name="drc" type="radio" class="btn-group btn-group-yesno" default="enter" label="PLG_SYS_CP_DRC" description="PLG_SYS_CP_DRC_DESC">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                    <option value="2">YES_SHOW_MESSAGE</option>
                </field>
                <field name="drct" type="text" default="RIGHT_CLICK_IS_DISABLED" label="PLG_SYS_CP_RIGHT_CLICK_IS_DISABLED_TEXT" description="PLG_SYS_SS_RIGHT_CLICK_IS_DISABLED_TEXT_DESC"> </field>
                <field name="dts" type="radio" class="btn-group btn-group-yesno" default="0" label="PLG_SYS_CP_DTS" description="PLG_SYS_CP_DTS_DESC">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="copyprotect"><![CDATA[http://help.aunited.ru/copyprotect/update/copyprotect-update.xml]]></server>
    </updateservers>
</extension>